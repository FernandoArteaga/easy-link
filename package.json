{
	"name": "easy-link",
	"private": true,
	"version": "1.2.0",
	"type": "module",
	"engines": {
		"node": ">= 24.2.0",
		"pnpm": ">= 10.0.0",
		"npm": "please use pnpm"
	},
	"packageManager": "pnpm@10.12.1",
	"scripts": {
		"dev": "vite dev",
		"dev:network": "vite dev --host",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"fmt": "eslint --fix && prettier --write .",
		"lint": "eslint && prettier --check .",
		"firebase-emulator:start": "firebase emulators:start --import=./.firebase-emulator-data --export-on-exit",
		"firebase-emulator:export": "firebase emulators:export ./.firebase-emulator-data"
	},
	"dependencies": {
		"firebase": "^12.4.0",
		"lucide-svelte": "0.545.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.37.0",
		"@skeletonlabs/skeleton": "^3.2.2",
		"@skeletonlabs/skeleton-svelte": "^1.5.3",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.14",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.0",
		"svelte": "^5.40.1",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@firebase/util",
			"@tailwindcss/oxide",
			"esbuild"
		]
	}
}
