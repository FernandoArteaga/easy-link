{
	"name": "easy-link",
	"private": true,
	"version": "1.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:network": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"fmt": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"firebase-emulator:start": "open http://localhost:9090 && firebase emulators:start --import=./.firebase-emulator-data --export-on-exit",
		"firebase-emulator:export": "firebase emulators:export ./.firebase-emulator-data"
	},
	"dependencies": {
		"firebase": "^11.4.0",
		"lucide-svelte": "^0.477.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.22.0",
		"@skeletonlabs/skeleton": "3.0.0-next.12",
		"@skeletonlabs/skeleton-svelte": "1.0.0-next.21",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.18.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.0.11",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.22.5",
		"svelte-check": "^4.1.5",
		"tailwindcss": "^4.0.11",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vite": "^6.2.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@firebase/util",
			"esbuild"
		]
	}
}
